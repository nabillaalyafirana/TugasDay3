<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8B5CC"
    tools:context="MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:textAlignment="center"
        android:text="𐙚NEIBSKINS ๋࣭🫧࣭⭑"
        android:textColor="#34428F"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="217dp"
        android:layout_height="134dp"
        android:layout_below="@+id/tvTitle"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:contentDescription="Tombol untuk mengakses channel"
        android:onClick="onImageButtonClick"
        android:src="@drawable/skii" />

    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:layout_below="@+id/btn1"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:contentDescription="Tombol untuk mengakses channel"
        android:onClick="onImageButtonClick"
        android:src="@drawable/skintific" />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="158dp"
        android:layout_height="150dp"
        android:layout_below="@+id/btn2"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:contentDescription="Tombol untuk mengakses channel"
        android:onClick="onImageButtonClick"
        android:src="@drawable/whitelab" />

</RelativeLayout>